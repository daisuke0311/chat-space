.chat__message-list-box{data: {message: {id: message.id}}}
  .chat__message-list-box-info
    %p.chat__message-list-box-info-name
      = message.user.name
    %p.chat__message-list-box-info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .lower-message
    - if message.content.present?
      .chat__message-list-box-text
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
.side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__icon 
        = link_to new_group_path do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
        
      
  .side__group
    - current_user.groups.each do |group|
      .side__group-list
        = link_to group_messages_path(group) do
          .side__group-list-name
            = group.name
          .side__group-list-message
            = group.show_last_message

    
